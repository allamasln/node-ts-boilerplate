{
  "name": "express-boilerplate",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "tsx watch --env-file=.env --clear-screen=false src/server.ts | pino-pretty",
    "test": "vitest run",
    "build": "tsup",
    "lint": "biome check ./src",
    "lint:fix": "biome check ./src --fix",
    "format": "biome format ./src"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@biomejs/biome": "1.8.3",
    "@types/express": "^4.17.21",
    "@types/supertest": "^6.0.2",
    "express": "^4.19.2",
    "lint-staged": "^15.2.9",
    "pino": "^9.3.2",
    "pino-pretty": "^11.2.2",
    "supertest": "^7.0.0",
    "tsup": "^8.2.4",
    "typescript": "^5.5.4",
    "vite-tsconfig-paths": "^5.0.1",
    "vitest": "^2.0.5"
  },
  "dependencies": {
    "http-status-codes": "^2.3.0",
    "tsx": "^4.17.0"
  },
  "tsup": {
    "entry": ["src", "!src/**/__tests__/**", "!src/**/*.test.*"],
    "splitting": false,
    "sourcemap": true,
    "clean": true
  }
}
